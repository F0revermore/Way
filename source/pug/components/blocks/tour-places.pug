mixin tour-places()
	section.tour-places
		.container
			h2.title Места<br>посещения
			p.text Вы можете выбрать полный тур или <br>частичный, с посещением первых 3 мест
			.places_list
				.places_content__case
					+img("content", "places-case-content1", "jpg", 350, 430, "Греция")
					span.case__text-content Греция
				.places_content__case
					+img("content", "places-case-content2", "jpg", 350, 430, "Албания")
					span.case__text-content Албания
				.places_content__case
					+img("content", "places-case-content3", "jpg", 350, 430, "Македония")
					span.case__text-content Македония
				.places_content__case
					+img("content", "places-case-content4", "jpg", 350, 430, "Черногория")
					span.case__text-content Черногория
				.places_content__case
					+img("content", "places-case-content5", "jpg", 350, 430, "Хорватия")
					span.case__text-content Хорватия
